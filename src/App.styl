body,h1,h2,h3,p,span
  color #090909

::selection
  background #ed5230
  color #fff


#root
  padding 30px 0


input,button,textarea
  outline none
  border none
  &:focus,&:selected,&:hover
    outline none
    border none

#MemoApp
  position relative
  margin 0 auto
  width 90%
  max-width 1400px
  min-width 1000px
  min-height 700px
  box-shadow 0 10px 25px 0 rgba(0, 0, 0, .2)
  display flex
  justify-content: flex-start

// サイドナビ
.SideNav
  //width 320px
  width 30%
  border-right 1px solid #dfdfdf
  background #fff
  overflow-y auto
  flex-grow 1

  h1
    color #000
    font-size 28px
    line-height 72px
    font-weight 400
    text-align left
    padding-left 20px

  .SideNav__inner
    padding-bottom 52px

.Frame
  border-radius 12px
  border solid 1px #dcdcdc
  background #e0e0e0
  margin 0 12px 20px
  box-shadow 0 4px 12px 0 rgba(0, 0, 0, .2)
  overflow hidden

  .Frame__label
    position relative
    height 40px
    padding 4px

.MemoThumbnail
  cursor pointer
  border-bottom 1px solid #bdbdbd
  background #fff5ec

  &:hover
    background #fffbf6

  &:last-child
    border-bottom none

.MemoList__createNewBtn
  float right
  display block
  box-sizing content-box
  border-radius 20px
  padding 0
  width 40px
  height 40px
  border none !important
  outline none !important
  background #ff6161

  &:hover
    background #ff7575

.MemoThumbnail__container
  height: 70px
  padding 12px
  box-sizing border-box
  font-family: 'YakuHanJP'
  font-style: normal
  font-weight: 300


.MemoThumbnail__container.selected
  background #fffbf6

.MemoThumbnail__inner
  position relative
  height 100%

.MemoThumbnail__date
  position absolute
  top 0
  left 0
  font-weight: 100
  font-size 11px
  color #3a3a3a
  padding-bottom 6px
  text-align left

.MemoThumbnail__title
  position absolute
  top 20px
  left 0
  width 100%
  padding-right 20px
  box-sizing border-box




  input
    background transparent
    color #090909
    border none
    width 100%
    height 24px
    text-align left
    overflow hidden
    white-space nowrap
    font-weight 300
    font-size 18px
    text-overflow: ellipsis
    padding 0
    box-sizing border-box

  input:focus
    outline 0
    border 1px solid #e6b422



.FolderLabel
  width 100%
  height 50px
  display flex
  align-items center
  text-align center
  color #202020

  .FolderLabel__inner
    width 100%
    font-weight bold
    user-select none
    display flex
    position relative

    p
      width 100%
      line-height 40px

    .MemoList__createNewBtn
      position absolute
      top 0
      right 4px



.DeleteBtn__icon
  position absolute
  height 100%
  display inline-flex
  align-items center
  color #2c2c2c
  margin-left 4px
  cursor pointer

  &:hover
    opacity 0.6

.Folder__icon
  color #2c2c2c
  margin-left 4px
  cursor pointer



.Editor
  width 70%
  background #f5f5f5

  @media (prefers-color-scheme: dark) {
    background #eeeeee
  }

  .Editor__wrapper
    height 100%
    box-sizing border-box

  .Editor__inner
    height 100%
    position relative


  .Editor__menu
    width 100%
    height 72px
    border-bottom 1px solid #e0e0e0

    .Editor__menu__circleBtn
      width 40px
      height 40px
      background #fff
      border-radius 20px
      box-shadow 0 4px 12px 0 rgba(0, 0, 0, .2)
      display table
      float right
      margin 16px 16px 16px 0
      cursor pointer

    .Editor__menu__btn
      width auto
      height 40px
      background #fff
      border-radius 20px
      box-shadow 0 4px 12px 0 rgba(0, 0, 0, .2)
      display table
      float right
      margin 16px 16px 16px 0
      font-weight bold

    .FolderBtn
      position relative
      padding 14px
      height 100%
      box-sizing border-box
      border-radius 20px

      p
        padding-right 4px
        float left
        font-size 14px
      i
        float left



    i
      position relative
      color #1a1a1a
      display table-cell
      vertical-align middle

  .Editor__date
    font-size 12px
    text-align left
    color #868686

  .Editor__title
    width 100%
    padding 30px 60px
    box-sizing border-box

    input
      font-weight bold
      width 100%
      height 100%
      line-height 60px
      font-size 32px
      letter-spacing 2px
      text-align left
      background none
      color #090909
      border-bottom: solid 1px #e0e0e0;
      padding 12px 0

  .Editor__body
    width 100%
    height calc(100% - 207px)
    padding 12px 60px 0
    box-sizing border-box

    textarea

      resize: none
      display table-cell
      vertical-align top
      width 100%
      height 95%
      line-height 46px
      font-size 24px
      letter-spacing 2px
      text-align left
      background none
      color #090909
      word-wrap break-word

#root
  width 100%
  margin 0 auto
  text-align center

.logo
  height 6em
  padding 1.5em
  will-change filter
  &:hover
    filter drop-shadow(0 0 2em #646cffaa)
  &.react
    &:hover
      filter drop-shadow(0 0 2em #61dafbaa)

@keyframes logo-spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)


@media (prefers-reduced-motion: no-preference)
  a
    &:nth-of-type(2)
      .logo
        animation logo-spin infinite 20s linear

.card
  padding 2em

.read-the-docs
  color #888