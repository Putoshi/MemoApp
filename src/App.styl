body,h1,h2,h3,p,span
  color #090909


::selection
  background #ed5230
  color #fff


#root
  padding 30px 0


input,button,textarea
  outline none
  border none
  &:focus,&:selected,&:hover
    outline none
    border none

#MemoApp
  position relative
  margin 0 auto
  width 90%
  max-width 1400px
  min-width 1000px
  min-height 700px
  background #f7f7f7
  box-shadow 0 10px 25px 0 rgba(0, 0, 0, .2)
  display flex
  justify-content: flex-start

// サイドナビ
.SideNav
  //width 320px
  width 30%
  border-right 1px solid #bdbdbd
  background #fff
  overflow-y auto
  flex-grow 1

  h1
    color #000
    font-size 28px
    line-height 72px
    font-weight 400
    text-align left
    padding-left 20px

  .SideNav__inner
    padding-bottom 52px

.Frame
  border-radius 12px
  border solid 1px #dcdcdc
  background #e0e0e0
  margin 0 12px 20px
  box-shadow 0 4px 12px 0 rgba(0, 0, 0, .2)
  overflow hidden

  .Frame__label
    position relative
    height 40px
    padding 4px

.MemoThumbnail
  cursor pointer
  border-bottom 1px solid #bdbdbd
  background #fff0e2

  &:hover
    background #fffbf6

  &:last-child
    border-bottom none

.MemoList__createNewBtn
  float right
  display block
  box-sizing content-box
  border-radius 20px
  padding 0
  width 40px
  height 40px
  border none !important
  outline none !important
  background #ff6161
  ////border-radius 0
  //border-bottom 1px solid #bdbdbd

  //&:active
  //  outline none
  //  border none

  &:hover
    background #ff7575
    //outline none
    //border none
    //border-bottom 1px solid #bdbdbd

.MemoThumbnail__container
  height: 70px
  padding 12px
  box-sizing border-box
  font-family: 'YakuHanJP'
  font-style: normal
  font-weight: 300
  //height 100%





.MemoThumbnail__container.selected
  background #fffbf6

.MemoThumbnail__inner
  position relative
  height 100%

.MemoThumbnail__date
  position absolute
  top 0
  left 0
  font-weight: 100
  font-size 11px
  color #3a3a3a
  padding-bottom 6px
  text-align left

.MemoThumbnail__title
  position absolute
  top 20px
  left 0
  width 100%
  padding-right 20px
  box-sizing border-box

  .MemoThumbnail__title__icon
    position absolute
    height 100%
    display inline-flex
    align-items center
    color #2c2c2c
    margin-left 4px

    &:hover
      opacity 0.6


  input
    background transparent
    color #090909
    border none
    width 100%
    height 24px
    text-align left
    overflow hidden
    white-space nowrap
    font-weight 300
    font-size 18px
    text-overflow: ellipsis
    padding 0
    box-sizing border-box

  input:focus
    outline 0
    //border-color #e6b422
    border 1px solid #e6b422
    //height 22px
    //width 256px
    //transform translateX(-2px)

