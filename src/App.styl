.FolderLabel
  width 100%
  height 50px
  //border-bottom 1px solid #141414
  display flex
  align-items center
  text-align center
  color #202020

  .FolderLabel__inner
    width 100%
    font-weight bold
    user-select none







.Editor
  width 70%


  .Editor__wrapper
    padding 30px 60px
    height 100%
    box-sizing border-box

  .Editor__inner
    height 100%
    display flex

    flex-direction column

  .Editor__title
    width 100%
    input
      width 100%
      height 100%
      line-height 60px
      font-size 32px
      letter-spacing 2px
      text-align left
      background none
      color #090909

  .Editor__body
    width 100%
    height 100%
    padding-top 12px

    textarea
      resize: none
      display table-cell
      vertical-align top
      width 100%
      height 100%
      line-height 46px
      font-size 24px
      letter-spacing 2px
      text-align left
      background none
      color #090909
      word-wrap break-word

#root
  width 100%
  margin 0 auto
  text-align center

.logo
  height 6em
  padding 1.5em
  will-change filter
  &:hover
    filter drop-shadow(0 0 2em #646cffaa)
  &.react
    &:hover
      filter drop-shadow(0 0 2em #61dafbaa)

@keyframes logo-spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)


@media (prefers-reduced-motion: no-preference)
  a
    &:nth-of-type(2)
      .logo
        animation logo-spin infinite 20s linear

.card
  padding 2em

.read-the-docs
  color #888