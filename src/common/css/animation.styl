animation-hover()
  &:hover
    opacity 0.7
    transition opacity 0.05s linear

button-animation-hover()
  &:hover
    background #F6FFAC
    transition opacity 0.05s linear

animation-ticker(delay=0s)
  will-change opacity
  animation-name ticker
  animation-duration .6s
  animation-fill-mode forwards
  animation-direction normal
  animation-delay delay
  animation-timing-function cubic-bezier(0.100, 0.445, 0.355, 1.000)

@keyframes ticker
  0%
    opacity 0
  10%
    opacity .5
  13%
    opacity .3
  30%
    opacity .3
  50%
    opacity .7
  53%
    opacity .5
  100%
    opacity 1

// progress-bar
animation-progress-bar()
  will-change transform
  animation-name progress-bar
  animation-duration 0.7s
  animation-fill-mode forwards
  animation-direction normal
  animation-timing-function cubic-bezier(0.100, 0.445, 0.355, 1.000)
  animation-iteration-count infinite

@keyframes progress-bar
  0%
    transform-origin top left
    transform scaleX(0)
  50%
    transform-origin top left
    transform scaleX(1)
  75%
    transform-origin top right
    transform scaleX(1)
  100%
    transform-origin top right
    transform scaleX(0)

// scroll-label
animation-scroll-label()
  animation-name scroll-label
  animation-duration 2.0s
  animation-fill-mode forwards
  animation-direction normal
  animation-timing-function cubic-bezier(0.420, 0.000, 0.580, 1.000)
  animation-iteration-count infinite

@keyframes scroll-label
  0%
    opacity 0
    transform translate3d(0px, 5px, 0px)
  15%
    opacity 1
    transform translate3d(0px, 0px, 0px)
  75%
    opacity 1
    transform translate3d(0px, 0px, 0px)
  100%
    opacity 0
    transform translate3d(0px, 5px, 0px)

// scroll-icon
animation-scroll-icon()
  animation-name scroll-icon
  animation-duration 2.0s
  animation-fill-mode forwards
  animation-direction normal
  animation-timing-function cubic-bezier(0.075, 0.82, 0.165, 1)
  animation-iteration-count infinite

@keyframes scroll-icon
  0%
    transform-origin top left
    transform scaleY(0)
  50%
    transform-origin top left
    transform scaleY(1)
  75%
    transform-origin bottom left
    transform scaleY(1)
  100%
    transform-origin bottom left
    transform scaleY(0)

// scroll-bounce
