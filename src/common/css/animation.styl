// click-ripple
animation-click-ripple()
  overflow hidden
  position relative

  &:after
    content ''
    position absolute
    top 50%
    left 50%
    margin -100px 0 0 -100px
    width 200px
    height 200px
    border-radius 50%
    opacity 0
    pointer-events none
    background #fff

  &.active:after
    animation-name click-ripple
    animation-duration 0.4s
    animation-timing-function cubic-bezier(0.420, 0.000, 0.580, 1.000)
    animation-fill-mode forwards

@keyframes click-ripple
  0%
    transform scale3d(0.3, 0.3, 1)
  25%,50%
    opacity 0.1
  100%
    opacity 0
    transform scale3d(1.2, 1.2, 1)

// prev-icon
animation-prev-icon()
  animation-name prev-icon
  animation-duration 0.6s

@keyframes prev-icon
  0%
    opacity 1
    margin-left 0
  30%
    opacity 0
    margin-left -7px
  60%
    opacity 0
    margin-left 7px
  100%
    opacity 1
    margin-left 0

// next-icon
