  animation-name next-icon
  animation-duration 0.6s

@keyframes next-icon
  0%
    opacity 1
    margin-left 0
  30%
    opacity 0
    margin-left 7px
  60%
    opacity 0
    margin-left -7px
  100%
    opacity 1
    margin-left 0

// preload
animation-preload()
  transform-origin 50% 100%
  animation-name preload-animation
  animation-duration 2.0s
  animation-fill-mode both
  animation-direction normal
  animation-iteration-count infinite

@keyframes preload-animation
  0%
    transform scale(1, 0.98) skew(0, 0)
    animation-timing-function ease-out
  25%
    transform scale(1, 1) skew(-3deg, 0)
    animation-timing-function ease-in
  50%
    transform scale(1, 0.98) skew(0, 0)
    animation-timing-function ease-out
  75%
    transform scale(1, 1) skew(3deg, 0)
    animation-timing-function ease-in
  100%
    transform scale(1, 0.98) skew(0, 0)
    animation-timing-function ease-out

// scrollEffect-vertical
scrollEffect-vertical(distance = 50, duration = 0.8, easing = cubic-bezier(0.030, 0.825, 0.440, 1.000), delay = 0)
  opacity 0
  backface-visibility hidden
  transform translate3d(0px, (distance)px, 0px)
  transition transform (duration)s (easing) (delay)s, opacity 0.5s cubic-bezier(.25,.25,.75,.75) (delay / 1.2)s
  will-change opacity, transform

scrollEffect-verticalShow()
  opacity 1
  backface-visibility hidden
  transform translate3d(0px, 0px, 0px)

// scrollEffect-horizontal
scrollEffect-horizontal(delay = 0, distance = 50)
  opacity 0
  backface-visibility hidden
  transform translate3d((distance)px, 0px, 0px)
  transition transform 0.8s cubic-bezier(0.030, 0.825, 0.440, 1.000) (delay)s, opacity 0.5s cubic-bezier(.25,.25,.75,.75) (delay)s
  will-change opacity, transform

scrollEffect-horizontalShow()
  opacity 1
  backface-visibility hidden
  transform translate3d(0px, 0px, 0px)

// scrollEffect-alpha
scrollEffect-alpha(delay = 0)
  opacity 0
  transform translate3d(0px, 0px, 0px)
  backface-visibility hidden
  will-change opacity
  transition opacity 0.5s cubic-bezier(.25,.25,.75,.75) (delay)s

scrollEffect-alphaShow()
  opacity 1

// hamburger-close
animation-hamburger-close()
  span
    &.line1, &.line2, &.line3
      animation-duration 0.4s
      animation-timing-function cubic-bezier(0.165, 0.840, 0.440, 1.000)
      animation-fill-mode forwards

    &.line1
      animation-name hamburger-close1

    &.line2
      animation-name hamburger-close2

    &.line3
      animation-name hamburger-close3

@keyframes hamburger-close1
  0%
    top 60px
  50%
    top 44px
  100%
    top 44px
    transform rotate(0deg)

@keyframes hamburger-close2
  0%
    opacity 0
  50%
    opacity 1
  100%
    opacity 1

@keyframes hamburger-close3
  0%
    top 60px
  50%
    top 76px
  100%
    top 76px
    transform rotate(0deg)

// hamburger-open
animation-hamburger-open()
  span
    &.line1, &.line2, &.line3
      animation-duration 0.4s
      animation-timing-function cubic-bezier(0.165, 0.840, 0.440, 1.000)
      animation-fill-mode forwards

    &.line1
      animation-name hamburger-open1

    &.line2
      animation-name hamburger-open2

    &.line3
      animation-name hamburger-open3

@keyframes hamburger-open1
  0%
    top 44px
    left 28px
    width 50px
  50%
    top 60px
  100%
    top 60px
    left 18px
    width 70px
    transform rotate(45deg)

@keyframes hamburger-open2
  0%
    opacity 1
  50%
    opacity 0
  100%
    opacity 0

@keyframes hamburger-open3
  0%
    top 76px
    left 28px
    width 50px
  50%
    top 60px
  100%
    top 60px
    left 18px
    width 70px
    transform rotate(-45deg)
