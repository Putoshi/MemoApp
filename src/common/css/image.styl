
image($url, $width, $height)
  &:before
    content: ''
    display: block
    background $url no-repeat
    background-size contain
    background-position $align
    width: $width
    height: $height

flex-image($src, $width, $height, $align=center)
  background $src no-repeat
  background-size contain
  background-position $align
  &:before
    content ''
    display block
    width 100%
    padding-bottom ($height/$width*100)%



